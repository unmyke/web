{
  "name": "test-web",
  "private": true,
  "workspaces": [
    "backend/*"
  ],
  "scripts": {
    "clean": "yarn lerna run clean",
    "build": "yarn lerna run build --scope @backend/gateway",
    "gateway:dev": "yarn lerna run dev --scope @backend/gateway",
    "typecheck": "lerna run typecheck",
    "lint": "tslint --project tsconfig.json -c tslint.json -t codeFrame backend/**/*.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "husky": "^3.1.0",
    "lerna": "3.15.0",
    "prettier": "^1.19.1",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint",
      "pre-push": "yarn lint && yarn typecheck"
    }
  }
}
